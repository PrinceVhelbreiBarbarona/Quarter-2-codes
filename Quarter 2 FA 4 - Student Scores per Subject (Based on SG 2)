num_students = int(input("Enter number of students: "))
num_subjects = int(input("Enter number of subjects: "))

total_class_score = 0  
total_scores_entered = num_students * num_subjects

for student in range(1, num_students + 1):
    print("Student {student}")
    student_total = 0

    for subject in range(1, num_subjects + 1):
        score = float(input("Enter score {subject}: "))
        student_total += score

    student_average = student_total / num_subjects
    print(f"Average for Student {student} = {student_average}\n")

    total_class_score += student_total

class_average = total_class_score / total_scores_entered
print(f"Class Average = {class_average}")
